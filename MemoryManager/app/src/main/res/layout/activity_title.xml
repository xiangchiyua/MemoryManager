<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Title"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="161dp">


    <TextView
        android:id="@+id/text_title"
        android:layout_width="222dp"
        android:layout_height="53dp"
        android:layout_marginTop="148dp"
        android:text="记忆管家"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_show_page_title"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_marginTop="68dp"
        android:text="@string/show_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title" />

    <Button
        android:id="@+id/button_select_page_title"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        android:text="@string/select_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_show_page_title" />

    <Button
        android:id="@+id/button_add_page_title"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_marginTop="40dp"
        android:text="@string/add_event"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_select_page_title" />
</androidx.constraintlayout.widget.ConstraintLayout>