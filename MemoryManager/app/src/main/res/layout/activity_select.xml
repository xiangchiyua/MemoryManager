<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Select">

    <Button
        android:id="@+id/button_backFrom_page_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="80dp"
        android:text="back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout_select_edit_title"
        android:layout_width="377dp"
        android:layout_height="71dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="128dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="select title"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText_select_title"
            android:layout_width="257dp"
            android:layout_height="match_parent"
            android:text="title" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup_select_type"
        android:layout_width="232dp"
        android:layout_height="184dp"
        android:layout_marginStart="92dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_select_edit_title">

        <RadioButton
            android:id="@+id/radioButton_select_type_anniversary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="type-Anniversary" />

        <RadioButton
            android:id="@+id/radioButton_select_type_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="type-account" />

        <RadioButton
            android:id="@+id/radioButton_select_type_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="type-Common" />

    </RadioGroup>


<RadioGroup
android:id="@+id/radioGroup_select_finishedOrUndo"
android:layout_width="231dp"
android:layout_height="128dp"
android:layout_marginStart="92dp"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/radioGroup_select_type">

<RadioButton
    android:id="@+id/radioButton_select_type_undo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="type-undo" />

<RadioButton
    android:id="@+id/radioButton_select_type_finished"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="type-finished" />
</RadioGroup>


<RadioGroup
android:id="@+id/radioGroup_select_needNotification"
android:layout_width="231dp"
android:layout_height="128dp"
android:layout_marginStart="92dp"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/radioGroup_select_finishedOrUndo">

<RadioButton
    android:id="@+id/radioButton_select_type_needNotification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="type-need-notification" />

<RadioButton
    android:id="@+id/radioButton_select_type_noNotification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="type-no-notification" />

</RadioGroup>


<Button
        android:id="@+id/button_select_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="666dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>